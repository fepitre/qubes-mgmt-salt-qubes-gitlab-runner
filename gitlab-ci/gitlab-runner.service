[Unit]
Description=GitLab Runner
After=syslog.target network.target
ConditionFileIsExecutable=/usr/local/bin/gitlab-runner

[Service]
StartLimitInterval=5
StartLimitBurst=10
ExecStart=/usr/local/bin/gitlab-runner "run" "--working-directory" "/home/user" "--config" "/home/user/.gitlab-runner/config.toml" "--service" "gitlab-runner" "--syslog" "--user" "user"

Restart=always
RestartSec=120

[Install]
WantedBy=multi-user.target
